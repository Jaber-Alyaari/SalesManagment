@model IEnumerable<shop.Models.Category>
@{
    Layout = "_CashierLayout";
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><i class="fa  fa-list"></i>  الأصنـــــــــــاف</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>جميــع الأصنـــــــــــاف الموجودة</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <a asp-action="Create" class="btn btn-sm btn-info text-white"><i class="fa fa-plus"></i>اضافة صنــــف </a>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>اسم الصنف</th>
                                    <th>الوصف</th>
                                    <th>حدث</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach(var item in Model){
                                <tr>
                                    <td>@item.Name</td>
                                        <td>@item.Describtion</td>

                                    <td>
                                        <a class="btn btn-sm btn-success text-white"><i class="fa fa-edit"></i> تعديل</a>
                                        <a class="btn btn-sm btn-danger text-white"><i class="fa fa-trash"></i> حـــذف</a>
                                    </td>
                                </tr>
                               }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>