@model shop.Models.Supplier

@{
    Layout = "_CashierLayout";
    ViewData["Title"] = "Edit";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><i class="fa fa-user"></i> الملف الشخصي</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        @if (TempData.ContainsKey("Message"))
        {
            @if (TempData["MessageState"].ToString() == "1")
            {
                <div class="alert-success " style="text-align: right;font-size: larger;"><h2> @TempData["Message"] </h2></div>
            }
            else
            {
                <div class="alert-danger " style="text-align: right;font-size: larger;"> @TempData["Message"] </div>
            }
        }

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> المعلوات الشخصية</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-md-3 col-sm-3  profile_left">
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <!-- Current avatar -->
                                    <img class="img-responsive avatar-view" src="images/picture.jpg" alt="Avatar" style="border-radius:10px">
                                </div>
                            </div>
                            <h3>@Html.DisplayFor(Model=>Model.Name)</h3>

                  
                        </div>
                        <div class="col-md-9 col-sm-9  profile_left">
                            <form asp-action="Edit" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                                <input type="hidden" asp-for="Id" />

                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align"><strong><i class="fa fa-user"></i> المعلومات الشخصية  </strong></label>
                                </div>
                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">
                                        الاسم الكامل <span class="required">*</span>
                                    </label>
                                    <div class="col-md-8 col-sm-8 ">
                                        <input asp-for="Name" type="text" required="required" class="form-control" placeholder="الأســــــم  ">
                                    </div>
                                    @*<div class="col-md-4 col-sm-4 ">
                                    <input type="text" required="required" class="form-control" placeholder="الأسم الثاني ">
                                    </div>*@
                                </div>
                               
                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">الهاتف</label>
                                    <div class="col-md-8 col-sm-8 ">
                                        <input asp-for="Phone" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">الموقع</label>
                                    <div class="col-md-8 col-sm-8 offset-md-2">
                                        <input asp-for="Address" class="form-control has-feedback-left" placeholder=" الموقع ">
                                        <span asp-validation-for="Address" class="right text-danger"></span>

                                        <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">الأيميل</label>
                                    <div class="col-md-8 col-sm-8 ">
                                        <input asp-for="Email" class="form-control" type="text">
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align"><strong><i class="fa fa-key"></i> معلومات الحساب</strong></label>
                                </div>

                                @*<div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">رقم الحساب المستخدم</label>
                                    <div class="col-md-8 col-sm-8 ">
                                        <input asp-for="UserName" class="form-control" type="text" placeholder="اسم المستخدم">
                                    </div>
                                </div>*@
                                

                                @*if Admin*@
                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align"><strong><i class="fa fa-key"></i> حالــــة الحســــــــاب</strong></label>
                                </div>

                                <div class="item form-group">
                                    <label class="col-form-label col-md-3 col-sm-3 label-align">تنشيط الحساب </label>

                                    <div class="col-md-8 col-sm-8 offset-md-2">
                                        <select name="State" class="form-control has-feedback-left">
                                            <option value="@Boolean.FalseString">تعطيـــــــــل </option>
                                            <option value="@Boolean.TrueString">تفعيـــــــــل</option>
                                        </select>
                                        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                              </div>

                                <div class="ln_solid"></div>
                                <div class="item form-group">
                                    <div class="col-md-6 col-sm-6 offset-md-3">
                                        <button type="submit" class="btn btn-success" style="float:right">حفــــــظ</button>
                                        <a asp-action="Index" class="btn btn-primary " style="float:right"> الغـــــــاء </a>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


   