@model shop.Models.Customer

@{
    Layout = "_CashierLayout";

    ViewData["Title"] = "Edit";
    string state = "";
    if (Model.Accounts.First().State != null && Model.Accounts.First().State.Value)
    {
        state = "مفعل";

    }
    else
    {
        state = "غير مفعل";

    }
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">تفاصيل الحساب</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">تفاصيل الحساب</li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">الحسابات</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="right_col" role="main">
    <div class="">
        @if (TempData.ContainsKey("Message"))
        {
            @if (TempData["MessageState"].ToString() == "1")
            {
                <div class="alert-success " style="text-align: right; font-family: Font Awesome 5 Free;"><h2> @TempData["Message"] </h2></div>
            }
            else
            {
                <div class="alert-danger " style="text-align: right; font-family: Font Awesome 5 Free;"> @TempData["Message"] </div>
            }
        }
        <div class="row">
            <div class="col-md-6 col-sm-6  ">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form class="form-horizontal" asp-action="Edit" id="demo-form2" data-parsley-validate>
                            <div class="card-body">

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                                    </div>
                                    <input value="@Model.Name" class="form-control has-feedback-left" readonly placeholder="اسم الحساب">


                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-fa-phone"></i></span>
                                    </div>
                                    <input value="@Model.Phone" class="form-control has-feedback-left" readonly placeholder="رقم الهاتف">


                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                    </div>
                                    <input value="@Model.Email" class="form-control has-feedback-left" readonly placeholder="الايميل">

                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-accessible-icon"></i></span>
                                    </div>
                                    <input value="@Model.Accounts.First().AccountNumber" class="form-control has-feedback-left" readonly placeholder="رقم الحساب">

                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-accessible-icon"></i></span>
                                    </div>
                                    <input value="@state" class="form-control has-feedback-left" readonly placeholder="حالة الحساب">

                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-accessible-icon"></i></span>
                                    </div>
                                    <input value="@Model.Accounts.First().CreateDate" class="form-control has-feedback-left" readonly placeholder="تاريخ الانشاء">

                                </div>
                            </div>
                            <div class="card-footer">

                                <a asp-action="JournalDetails" asp-route-id="@Model.Id" class="btn btn-info "> عمليـــات الحساب </a>
                                <a asp-action="Index" class="btn btn-default float-right">رجـــوع</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






