@model shop.Models.Customer

@{
    Layout = "_CashierLayout";

    ViewData["Title"] = "Edit";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@Model.Name</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">عمليات الحساب</li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Details" asp-route-id="@Model.Id">تفاصيل الحساب</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">الحسابات</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="row">
    <div class="col-3 col-sm-3 col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-luggage-cart"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">اجمالي له</span>
                <span class="info-box-number">
                    @Model.TotalCreditor

                </span>
            </div>

        </div>
    </div>
    <div class="col-3 col-sm-3 col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-cart-plus"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">اجمالي عليه</span>
                <span class="info-box-number">
                    @Model.TotalDeptor
                </span>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12  ">
        <div class="card">
            <div class="card-header">
                عمليات الحساب
            </div>
            <div class="card-body">
                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                        </div>
                        <div class="col-sm-12 col-md-6">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="example2" class="table table-bordered table-hover dataTable dtr-inline" aria-describedby="example2_info">
                                <thead>
                                    <tr>

                                        <th class="sorting sorting_asc" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
                                            تاريخ العملية
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">
                                            رقم المرجع
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">
                                            نوع المرجع
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">
                                            له او عليه
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="example2" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">
                                            اجمالي المبلغ
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Accounts)
                                    {
                                        foreach (var j in item.Journals)
                                        {
                                            <tr>
                                                <td class="dtr-control sorting_1" tabindex="0">
                                                    @Html.DisplayFor(modelItem => j.Date)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => j.ProcessId)


                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => j.ProcessType)
                                                </td>

                                                @if (j.Creditor.Value)
                                                {

                                                    <td>
                                                        لــة
                                                    </td>

                                                }
                                                else
                                                {
                                                    <td>
                                                        عليـــة
                                                    </td>
                                                }

                                                <td>
                                                    @Html.DisplayFor(modelItem => j.Amount)





                                                </td>

                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

