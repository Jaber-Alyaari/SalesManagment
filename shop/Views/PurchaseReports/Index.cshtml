@model IEnumerable<shop.Models.InvoiceDetail>
@{
    Layout = "_CashierLayout";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><i class="fa fa-list"></i> تقارير المشتريــات</h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="clearfix"></div>
        @if (TempData.ContainsKey("Message"))
        {
            @if (TempData["MessageState"].ToString() == "1")
            {
                <div class="alert-success " style="text-align: right;font-size: larger;"><h2> @TempData["Message"] </h2></div>
            }
            else
            {
                <div class="alert-danger " style="text-align: right;font-size: larger;"> @TempData["Message"] </div>
            }
        }
        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form asp-action="GetSalse" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="item form-group">
                                <div class="form-group col-2 ">
                                    <label class="control-label"> فلتــر حسب المورد</label>
                                </div>
                                <div class="col-md-3 col-sm-3">
                                    <select Name="id" class="form-control" asp-items="ViewBag.SupplierList"></select>
                                </div>
                                <div class="form-group col-2 ">
                                    <label class="control-label"> فلتــر حسب المنتج</label>
                                </div>
                                <div class="col-md-3 col-sm-3 ">
                                    <select Name="code" class="form-control" asp-items="ViewBag.ProductList"></select>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                    <label class="control-label"> فلتــر حسب التاريخ</label>
                                
                            </div>

                            <div class="item form-group">
                                <div class="form-group col-2 ">
                                    <label class="control-label"> من تاريخ  </label>
                                </div>
                                <div class="col-md-3 col-sm-3 ">
                                    <input name="date" type="date" class="form-control" >
                                </div>
                                <div class="form-group col-2 ">
                                    <label class="control-label">   الــى تاريخ</label>
                                </div>
                                <div class="col-md-3 col-sm-3 ">
                                    <input name="todate" class="form-control" type="Date" >
                                </div>
                            </div>
                            <div class="ln_solid"></div>

                            <div class="item form-group">
                                <div class="col-md-8 col-sm-8 ">
                                    <input type="submit" value="فلــــــــــــــــــــــــــــــــــــتر" class="btn btn-primary btn-block" />
@*                                    <a asp-action="Index" class="btn btn-primary " style="float:right"> الغـــــــاء </a>
*@
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
@*                            <a asp-action="Create" class="btn btn-sm btn-info text-white"><i class="fa fa-plus"></i> اضافة منتج </a>
*@                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <thead>


                                <tr>
                                    <th>
                                        المورد
                                    </th>
                                    <th>
                                        اسم المنتج
                                    </th>
                                    <th>
                                        الكمية
                                    </th>
                                    <th>
                                         السعر
                                    </th>
                                    <th>
                                       التاريخ
                                    </th>
                                    <th></th>
                                </tr>
                                @* <tr>
                                <!-- <th>Medicine Code</th>
                                <th>Image</th> -->
                                <th>الاســم</th>
                                <!-- <th>Purchase Price</th> -->
                                <th> الــسعر</th>
                                <th>الكميــة</th>
                                <th>الــوحــدة</th>
                                <th>حــــدث</th>
                                </tr>*@
                            </thead>

                            @if (Model is not null)
                            {
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        

                                            <tr>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.Invoice.Supplier.Name)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.ProductCodeNavigation.Name)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                                </td>
                                                <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Invoice.Date)
                                                </td>
                                                <td>

                                                </td>
                                            </tr>
                                        
                                    }
                                </tbody>
                             }
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>