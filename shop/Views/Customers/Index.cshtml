@model IEnumerable<shop.Models.Customer >

@{
    Layout = "_CashierLayout";
    ViewData["Title"] = "Index";
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><i class="fa fa-shopping-cart"></i>الزبائـــــن</h3>
            </div>
        </div>

        <div class="clearfix"></div>
              @if (TempData.ContainsKey("Message"))
         {
            @if (TempData["MessageState"].ToString() == "1")
            {
                <div class="alert-success " style="text-align: right;font-size: larger;"><h2> @TempData["Message"] </h2></div>
            }
            else{
            <div class="alert-danger " style="text-align: right;font-size: larger;"> @TempData["Message"] </div>
            }
        }
        
            <div class="row">
                <div class="col-md-12 col-sm-12  ">
                    <div class="x_panel">
                        <div class="x_title">
                            <ul class="nav navbar-right panel_toolbox">
                                <a asp-action="Create" class="btn btn-sm btn-info text-white"><i class="fa fa-plus"></i> اضافة زبون </a>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead>


                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.State)
                                        </th>
                                        <th></th>
                                    </tr>
                               
                                </thead>


                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.State)
                                            </td>
                                            <td>


                                                <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i> تفاصيل</a>
                                                <a class="btn btn-sm btn-success text-white" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> تعديل</a>

                                                <a asp-route-id="@item.Id" class="btn btn-sm btn-danger text-white" asp-action="Delete" onclick="return confirm('هل تريد حذف هذا الزبون بالفعل');"><i class="fa fa-trash"></i> حـــذف</a>

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>



































