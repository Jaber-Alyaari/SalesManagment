@model shop.Models.Customer

@{
    Layout = "_CashierLayout";

    ViewData["Title"] = "Edit";
}




<div class="right_col" role="main">
    <div class="">

        <div class="item form-group">
            <label class="col-form-label col-md-3 col-sm-3 label-align">
               اجمالي لــ @Model.Name <span class="required">*</span>
            </label>
            <div class="col-md-8 col-sm-8 ">
                <input asp-for="TotalCreditor" type="text" required="required" class="form-control" readonly>
            </div>
        </div>
        <div class="item form-group">
            <label class="col-form-label col-md-3 col-sm-3 label-align">
                  اجمالي علــــى   @Model.Name <span class="required">*</span>
            </label>
            <div class="col-md-8 col-sm-8 ">
                <input asp-for="TotalDeptor" type="text" required="required" class="form-control" readonly>
            </div>
        </div>
        <div class="page-title">
            <div class="title_left">
                <h3><i class=""></i>عمليـــات الحساب</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">

                        <ul class="nav navbar-right panel_toolbox">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-primary text-white"><i class="fa"></i>رجــــوع  </a>
                        </ul>

                        <div class="clearfix"></div>

                    </div>
                    <div class="x_content">
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                            <thead>


                                <tr>
                                    <th>
                                        تاريخ العملية
                                    </th>
                                    <th>
                                        رقم المرجع
                                    </th>
                                    <th>
                                        نوع المرجع
                                    </th>

                                    <th>
                                        لة او علية
                                    </th>
                                    <th>
                                        اجمالي المبلغ
                                    </th>

                                </tr>

                            </thead>


                            <tbody>
                                @foreach (var item in Model.Accounts)
                                {
                                    foreach (var j in item.Journals)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => j.Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem =>j.ProcessId)


                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => j.ProcessType)
                                            </td>
                                            @* <td>
                                    @Html.DisplayFor(modelItem => j.Amount)
                                    </td>*@
                                            @if (j.Creditor.Value)
                                            {

                                                <td>
                                                    لــة
                                                </td>

                                            }
                                            else
                                            {
                                                <td>
                                                    عليـــة
                                                </td>
                                            }

                                            <td>
                                                    @Html.DisplayFor(modelItem => j.Amount )
                                              




                                                </td>

                                            </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
